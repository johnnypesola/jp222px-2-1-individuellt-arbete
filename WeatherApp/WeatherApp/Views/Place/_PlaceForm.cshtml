@model WeatherApp.Models.Place

<div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h2>@ViewBag.Title</h2>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PlaceId)

        <div>
            @Html.LabelFor(model => model.Name)
            <div>
                @Html.TextBoxFor(model => model.Name, null, new { @maxlength = "50", @size = "50", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            @Html.LabelFor(model => model.Longitude)
            <div>
                @Html.TextBoxFor(model => model.Longitude, null, new { @maxlength = "50", @size = "50", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Longitude, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            @Html.LabelFor(model => model.Latitude)
            <div>
                @Html.TextBoxFor(model => model.Latitude, null, new { @maxlength = "50", @size = "50", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Latitude, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <input type="submit" value="Spara" class="button btn btn-primary" /> @Html.ActionLink("Tillbaka till listan", "Index", null, new { @class = "button btn btn-default" })
    }
</div>
